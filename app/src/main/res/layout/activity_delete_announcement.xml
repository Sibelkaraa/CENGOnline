<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteAnnouncement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/deletepng" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="323dp"
                android:layout_height="83dp"
                android:text="@string/delete_announcement_select"
                android:textColor="@color/student_button_color"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viev14"
            android:layout_width="match_parent"
            android:layout_height="459dp"
            android:background="@color/student_button_color" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/deletebutton5"
            android:layout_width="97dp"
            android:layout_height="93dp"
            android:background="@drawable/bottonpink"
            android:drawableTop="@drawable/delete"
            android:text="@string/delete_announcements" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>